<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <LinearLayout
        android:id="@+id/topPanel"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_16"
        app:layout_constraintStart_toStartOf="@id/left_guideline_16"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamFragmentLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/ys_display_bold"
        android:gravity="center_vertical"
        android:text="@string/about"
        android:textColor="?attr/android:textColor"
        android:textFontWeight="500"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_16"
        app:layout_constraintStart_toStartOf="@id/left_guideline_16"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@id/right_guideline_16"
        app:layout_constraintStart_toStartOf="@id/left_guideline_16"
        app:layout_constraintTop_toBottomOf="@id/teamFragmentLabel">

        <TextView
            android:id="@+id/teamMember1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center_vertical"
            android:text="@string/anton_vishkin"
            android:textColor="?attr/android:textColor"
            android:textFontWeight="500"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/teamMember2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center_vertical"
            android:text="@string/anton_ignatov"
            android:textColor="?attr/android:textColor"
            android:textFontWeight="500"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/teamMember3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center_vertical"
            android:text="@string/kate_mahova"
            android:textColor="?attr/android:textColor"
            android:textFontWeight="500"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/teamMember4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center_vertical"
            android:text="@string/milan_isaev"
            android:textColor="?attr/android:textColor"
            android:textFontWeight="500"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
